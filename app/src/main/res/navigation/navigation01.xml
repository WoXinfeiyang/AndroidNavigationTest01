<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation01"
    app:startDestination="@id/first_fragment">

    <fragment
        android:id="@+id/first_fragment"
        android:name="com.fxj.androidNavigationTest01.FirstFragment"
        tools:layout="@layout/firstfragment">
        <action
            android:id="@+id/first_action"
            app:destination="@id/second_fragment"
            />
    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.fxj.androidNavigationTest01.SecondFragment"
        tools:layout="@layout/secondfragment">
        <action
            android:id="@+id/second_action"
            />
    </fragment>
</navigation>